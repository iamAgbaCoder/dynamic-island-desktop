{
  "name": "dynamic-island-desktop",
  "version": "2.0.0",
  "description": "Apple-level Dynamic Island for desktop - Premium UI overlay",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder",
    "lint": "eslint electron/",
    "format": "prettier --write \"electron/**/*.{js,css,html}\""
  },
  "keywords": [
    "electron",
    "dynamic-island",
    "overlay",
    "python",
    "desktop-ui",
    "system-monitor"
  ],
  "author": "Favour Bamgboye (iamAgbaCoder)",
  "license": "MIT",
  "dependencies": {
    "gsap": "^3.12.5",
    "zustand": "^4.5.0",
    "lucide": "^0.303.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "build": {
    "appId": "com.iamAgbaCoder.dynamic-island",
    "productName": "Dynamic Island",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
